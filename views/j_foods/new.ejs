<% include ../partials/header %>
<div class="container">
    <div class="row">
        <div col-lg-12 col-md-12 col-sm-12>
            <h1 style="text-align:center;">Create a New Post</h1>
            <div style="width:30%; margin:25px auto;">
                <form action="/j_foods" method="POST">
                    <div class="form-group">
                        <input class="form-control" type="text" name="name" placeholder="name" required>
                    </div>
                    <div class="form-group"> 
                        <input class="form-control" type="text" name="image" placeholder="image url" required>
                    </div>
                    <div class="form-group"> 
                        <input class="form-control" type="text" name="description" placeholder="description" required>
                    </div>
                    <div class="form-group"> 
                        <input class="form-control" type="number" name="price" placeholder="price" min="0.01" step="0.01" required>
                    </div>
                    <div class="form-group"> 
                   <button class="btn btn-lg btn-primary btn-block">Submit</button>
                    </div>
                </form>
                <a href="/j_foods" class="btn btn-xs btn-warning">Go Back</a>
            </div>
        </div>
    </div>
    
</div>

<% include ../partials/footer %>